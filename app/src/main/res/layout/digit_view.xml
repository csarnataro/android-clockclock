<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/digit_view_grid"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
    >

        <mobi.thru.clockclock.ClockImageView
            android:id="@+id/clock_0_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            />

        <mobi.thru.clockclock.ClockImageView
            android:id="@+id/clock_0_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <mobi.thru.clockclock.ClockImageView
            android:id="@+id/clock_1_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            />
        <mobi.thru.clockclock.ClockImageView
            android:id="@+id/clock_1_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <mobi.thru.clockclock.ClockImageView
            android:id="@+id/clock_2_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            />

        <mobi.thru.clockclock.ClockImageView
            android:id="@+id/clock_2_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            />

    </LinearLayout>

</LinearLayout>
